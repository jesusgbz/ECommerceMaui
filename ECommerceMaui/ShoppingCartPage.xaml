<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ECommerceMaui.ShoppingCartPage"
             Title="Carrito"
             BackgroundColor="#1C1C1E">

    <Grid RowDefinitions="*, Auto" Padding="10">

        <CollectionView x:Name="CartCollectionView" Grid.Row="0">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid Padding="10" ColumnDefinitions="Auto, *, Auto">

                        <Image Source="{Binding ImageUrl, StringFormat='https://placehold.co/80x80.png?text=IMG'}" 
                               HeightRequest="80" WidthRequest="80"
                               Grid.Column="0" />

                        <VerticalStackLayout Grid.Column="1" Padding="10" VerticalOptions="Center">
                            <Label Text="{Binding Name}" 
                                   TextColor="White" 
                                   FontAttributes="Bold" />
                            <Label Text="{Binding Description}" 
                                   TextColor="Gray" 
                                   FontSize="12" />
                        </VerticalStackLayout>

                        <Label Text="{Binding Price, StringFormat='${0:F2}'}" 
                               TextColor="#0A84FF"
                               VerticalOptions="Center" 
                               HorizontalOptions="End"
                               Grid.Column="2" />
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>

            <CollectionView.EmptyView>
                <VerticalStackLayout VerticalOptions="Center">
                    <Label Text="Tu carrito está vacío" 
                           TextColor="Gray" 
                           FontSize="18" 
                           HorizontalOptions="Center" />
                </VerticalStackLayout>
            </CollectionView.EmptyView>
        </CollectionView>

        <Button Grid.Row="1"
                Text="Proceder al Pago (Simulación)"
                BackgroundColor="#1CF500"
                TextColor="White"
                FontAttributes="Bold"
                CornerRadius="10"
                Margin="10"
                Clicked="OnCheckoutClicked"/>

    </Grid>
</ContentPage>