<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ECommerceMaui.HomePage"
             Title="Inicio"
             BackgroundColor="#1C1C1E">

    <CollectionView x:Name="ProductsCollectionView"
                    Margin="10"
                    SelectionMode="Single" 
                    SelectionChanged="OnProductSelected">

        <CollectionView.ItemsLayout>
            <GridItemsLayout Orientation="Vertical" Span="2" 
                             HorizontalItemSpacing="10" VerticalItemSpacing="10" />
        </CollectionView.ItemsLayout>

        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Frame Padding="0" CornerRadius="15" BackgroundColor="#2C2C2E"
                       HeightRequest="220" WidthRequest="170">

                    <VerticalStackLayout Spacing="5">
                        <Image Source="{Binding ImageSource}" 
                               Aspect="AspectFill"
                               HeightRequest="120"
                               WidthRequest="170" />

                        <Label Text="{Binding Name}" 
                               TextColor="White"
                               FontSize="16"
                               FontAttributes="Bold"
                               Margin="10,5,10,0"
                               LineBreakMode="TailTruncation" />

                        <Label Text="{Binding Price, StringFormat='${0:F2}'}"
                               TextColor="#0A84FF" FontSize="14"
                               Margin="10,0,10,10" />
                    </VerticalStackLayout>
                </Frame>
            </DataTemplate>
        </CollectionView.ItemTemplate>

    </CollectionView>

</ContentPage>