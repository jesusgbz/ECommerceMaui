<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ECommerceMaui.HomePage"
             Title="Inicio"
             BackgroundColor="#1C1C1E">

    <Grid RowDefinitions="Auto, Auto, *">

        <SearchBar Grid.Row="0"
                   Placeholder="Buscar productos..."
                   PlaceholderColor="Gray"
                   TextColor="White"
                   BackgroundColor="#2C2C2E"
                   CancelButtonColor="White"
                   Margin="10,10,10,0"
                   TextChanged="OnSearchBarTextChanged" />

        <CollectionView Grid.Row="1" 
                        x:Name="CategoriesCollectionView"
                        HeightRequest="60"
                        Margin="10">
            <CollectionView.ItemsLayout>
                <LinearItemsLayout Orientation="Horizontal" ItemSpacing="10" />
            </CollectionView.ItemsLayout>

            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame BackgroundColor="#2C2C2E" Padding="15,10" CornerRadius="20" BorderColor="Transparent">

                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnCategoryTapped" CommandParameter="{Binding .}" />
                        </Frame.GestureRecognizers>

                        <Label Text="{Binding Name}" TextColor="White" FontAttributes="Bold" />

                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup Name="CommonStates">
                                <VisualState Name="Normal" />
                                <VisualState Name="Selected">
                                    <VisualState.Setters>
                                        <Setter Property="BackgroundColor" Value="#0A84FF" />
                                    </VisualState.Setters>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <CollectionView Grid.Row="2" 
                        x:Name="ProductsCollectionView"
                        Margin="10">
            <CollectionView.ItemsLayout>
                <GridItemsLayout Orientation="Vertical" Span="2" 
                                 HorizontalItemSpacing="10" VerticalItemSpacing="10" />
            </CollectionView.ItemsLayout>

            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Padding="0" CornerRadius="15" BackgroundColor="#2C2C2E" HeightRequest="220">

                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnProductTapped" CommandParameter="{Binding .}" />
                        </Frame.GestureRecognizers>

                        <VerticalStackLayout Spacing="5">
                            <Image Source="{Binding ProductImageSource}" Aspect="AspectFill" HeightRequest="120" WidthRequest="170" />
                            <Label Text="{Binding Name}" TextColor="White" FontSize="16" FontAttributes="Bold" Margin="10,5,10,0" LineBreakMode="TailTruncation" />
                            <Label Text="{Binding Price, StringFormat='${0:F2}'}" TextColor="#0A84FF" FontSize="14" Margin="10,0,10,10" />
                        </VerticalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>